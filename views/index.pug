            .form-group
              label(for='Title') Title:
              input#Title.form-control(type='text', placeholder='Course title', name='Title', required='')
              //- small#emailValidateMsg.form-text.hidden.emsg &Dstrok;&#x1ECB;a ch&#x1EC9; email kh&ocirc;ng h&#x1EE3;p l&#x1EC7;
            .form-group
              label(for='Credits') Credits:
              input#Credits.form-control(type='text', placeholder='Credits', name='Credits')
              //- small#emailValidateMsg.form-text.hidden.emsg &Dstrok;&#x1ECB;a ch&#x1EC9; email kh&ocirc;ng h&#x1EE3;p l&#x1EC7;
            
